<%- include('includes/head') %> <%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Login</h1>
      <p class="text-center lead">Login or Sign up</p>

      <%- include('includes/messages') %> 

      <div class="row">
        <div class="col-lg my-5">
          <h4>Log In</h4>

          <p>If you already have account, log in</p>

          <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <label>E-mail address</label>
              <input type="email" class="form-control" name="email" />
            </div>

            <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" name="password" />
            </div>

            <button type="submit" class="btn btn-primary">Login</button>
          </form>
        </div>

        <div class="col-lg my-5">
          <h4>Sign up</h4>

          <p>If you don't have account, sign up</p>

          <form class="form-register" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <label>E-mail address</label>
              <input type="email" class="form-control" name="email" />
            </div>

            <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" name="password" />
            </div>

            <button type="submit" class="btn btn-primary">Sign Up</button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
