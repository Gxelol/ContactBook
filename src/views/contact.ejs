<%- include('includes/head') %> 
<%- include('includes/nav') %> 

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Contacts</h1>
      <p class="text-center lead">Create or edit your contacts</p>

      <%- include('includes/messages') %> 

      <% if (contact._id) {%> 
      <form class="form-contacts" action="/contact/edit/<%= contact._id %>" method="POST">
        <% } else { %> 
      <form class="form-contacts" action="/contact/register" method="POST">
        <% } %> 
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="form-group">
          <label>Name</label>
          <input value="<%= contact.name %> " type="text" class="form-control" name="name" />
        </div>
        <div class="form-group">
          <label>Surname</label>
          <input value="<%= contact.surname %>" type="text" class="form-control" name="surname" />
        </div>
        <div class="form-group">
          <label>Phone</label>
          <input value="<%= contact.phone %>" type="number" class="form-control" name="phone" />
        </div>
        <div class="form-group">
          <label>Email</label>
          <input value="<%= contact.email %>" type="email" class="form-control" name="email" />
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
      </form>
    
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %> 